{
  "name": "@standard-schema/validator-node",
  "version": "0.0.2",
  "description": "Node.js TypeScript validator for Standard Schema JSON v0.0.2",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "files": [
    "dist/src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/christywastaken/pilot-data-exchange.git",
    "directory": "validators/node"
  },
  "homepage": "https://github.com/christywastaken/pilot-data-exchange#readme",
  "bugs": {
    "url": "https://github.com/christywastaken/pilot-data-exchange/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch examples/express-server.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "example": "node dist/examples/express-server.js",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "standard-schema",
    "validator",
    "typescript",
    "json"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "zod": "^4.1.12"
  }
}
