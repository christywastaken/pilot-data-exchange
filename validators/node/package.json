{
  "name": "@standard-schema/validator-node",
  "version": "0.1.0",
  "description": "Node.js TypeScript validator for Standard Schema JSON",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch examples/express-server.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "example": "node dist/examples/express-server.js"
  },
  "keywords": [
    "standard-schema",
    "validator",
    "typescript",
    "json"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "zod": "^4.1.12"
  }
}
